{
  "env": {
    "browser": true,
    "es2018": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  },
  "rules": {
    "quotes": ["warn", "single"]
  },
  "extends": ["airbnb", "airbnb/hooks", "eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "plugins": ["airbnb"]
}
