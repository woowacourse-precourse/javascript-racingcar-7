{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "class-methods-use-this": "off",
    "import/extensions": ["error", "always"],
    "max-depth": ["error", 2],
    "no-ternary": "error"
  },
  "plugins": ["prettier"]
}
